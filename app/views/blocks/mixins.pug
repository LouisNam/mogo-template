mixin menuLink(title, href="#")
    li.header-menu-item 
        a.header-menu-link(href= href)= title

mixin headerBottomItem(number, title)
    .header-bottom-item
        span.header-bottom-number= number
        span.header-bottom-text= title

mixin blockBox(caption, title, desc)
    .block-box 
        h3.block-box-caption= caption 
        h3.block-box-heading= title 
        if desc 
            p.block-box-desc= desc

mixin aboutItem(data)
    .about-item 
        img.about-image(src= data.src, alt= data.alt)
        .about-content 
            i.about-icon(class= data.iconClass)
            span.about-title= data.title
mixin serviceItem(src, title, desc)
    .service-item 
        img.service-item-icon(src= src)
        .service-item-info 
            h3.service-item-title= title 
            p.service-item-desc= desc

mixin wedoItem(src, title, decs, active = "")
    .wedo-item(class= active)
        .wedo-item-header 
            img(src= src).wedo-item-icon
            h3.wedo-item-title= title
            i.fal.fa-angle-down.wedo-item-arrow
        .wedo-item-content
            .wedo-item-text= decs

mixin teamSocial(facebook = "#", twitter = "#", pinterest = "#", instagram = "#")
    ul.team-social
        li.team-social-item 
            a(href= facebook).team-social-link
                i.fab.fa-facebook-f
        li.team-social-item 
            a(href= twitter).team-social-link
                i.fab.fa-twitter
        li.team-social-item 
            a(href= pinterest).team-social-link
                i.fab.fa-pinterest
        li.team-social-item 
            a(href= instagram).team-social-link
                i.fab.fa-instagram  

mixin teamItem(src, name, position)
    .team-item 
        .team-main 
            img(src= src).team-image
            .team-content
                if block 
                    block                            
        .team-info 
            h3.team-name= name
            span.team-position= position

mixin workItem(src = "../images/img-work1.png", icon = "fa fa-home", title = "Photographer", desc = "Lorem ipsum dolor sit", full = "")
    .work-item(class= full)
        img.work-image(src= src)
        .work-content 
          i.work-icon(class= icon)
          h3.work-title= title
          span.work-desc.text.text--light= desc

mixin peopleItem(src = "./images/img-people1.png", name = "Name Kute", job = "Front-end Developer", desc = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Odio, architecto magnam explicabo blanditiis, quia amet repellendus quae, consequuntur hic ut voluptate qui vero non excepturi. Optio id eos praesentium esse?")
    li.people-item 
        img.people-avatar(src= src, alt="")
        .people-info 
          h3.people-name= name
          span.people-job.text.text--light= job
          p.people-desc.text= desc

mixin storyItem(src = "./images/img-blog1.png", dateNumber = 15, dateText = "Jan", title = " Lorem ipsum dolor sit amet", desc = "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Maxime, dicta assumenda temporibus minus, laborum provident dolorem perspiciatis quibusdam labore amet rem, quasi natus culpa blanditiis non quam. Necessitatibus, facere officia.", view = 574, comment = 17)
    li.story-item 
        .story-media 
          img.story-image(src= src, alt="")
          .story-date
            span.story-date-number= dateNumber
            span.story-date-text.text.text--light= dateText
        h3.story-title= title
        .story-desc
          p.story-desc-inner.text= desc
        .story-meta 
          .story-meta-item 
            i.fa.fa-eye.story-meta-icon 
            span.story-meta-number.text.text--light= view
          .story-meta-item 
            i.fa.fa-comment.story-meta-icon 
            span.story-meta-number.text.text--light= comment

mixin quoteItem(src="../images/img-quote.png", type=false, desc="Lorem ipsum dolor sit amet consectetur adipisicing elit. Error officiis neque blanditiis temporibus doloremque in nisi provident officia, mollitia reiciendis quia enim, qui aliquam vitae dolor dolores explicabo, eaque quaerat.", author="Jon Doe")
    .quote-item
        if type == false
            .quote-icon
                img(src= src)
        else             
            img(src= src).quote-img 
        .quote-info 
            p.quote-desc= desc
            span.quote-author= author